package popularity;

public class EngagementPerson {
    private String month;
    private String username;
    private String channelName;
    private String country;
    private String mainTopic;
    private int likes;
    private int posts;
    private int followers;
    private int comments;
    private int views;
    private double totalEngagement;

    public EngagementPerson(
        String newMonth,
        String newUsername,
        String newChannelName,
        String newCountry,
        String newMainTopic,
        int newLikes,
        int newPosts,
        int newFollowers,
        int newComments,
        int newViews) {
        month = newMonth;
        username = newUsername;
        channelName = newChannelName;
        country = newCountry;
        mainTopic = newMainTopic;
        likes = newLikes;
        posts = newPosts;
        followers = newFollowers;
        comments = newComments;
        views = newViews;
        totalEngagement = comments + likes;

    }


    public String getMonth() {
        return month;
    }


    public String getUsername() {
        return username;
    }


    public String getChannelName() {
        return channelName;
    }


    public String getCountry() {
        return country;
    }


    public String getMainTopic() {
        return mainTopic;
    }


    public int getLikes() {
        return likes;
    }


    public int getPosts() {
        return posts;
    }


    public int getFollowers() {
        return followers;
    }


    public int getComments() {
        return comments;
    }


    public int getViews() {
        return views;
    }
}
